<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_map_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="11">

  <FrameLayout
      android:id="@+id/map"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />


  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|right|end"
      android:layout_marginBottom="34dp"
      android:layout_marginRight="16dp"
      android:alpha=".98"
      android:orientation="vertical">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_layers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/black"
        android:clickable="true"
        android:src="@drawable/ic_layers_white_48px"
        android:tint="@android:color/white"
        app:borderWidth="0dp"
        app:elevation="4dp"
        app:fabSize="normal" />

  </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom|left|end"
      android:layout_marginBottom="32dp"
      android:layout_marginLeft="16dp"
      android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btn_current_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:backgroundTint="@android:color/white"
        android:clickable="true"
        android:elevation="8dp"
        android:padding="10dp"
        android:src="@drawable/ic_my_location_black_24dp"

        android:tint="@android:color/black" />

    <ImageButton
        android:id="@+id/btn_street_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:clickable="true"
        android:elevation="8dp"
        android:padding="10dp"
        android:src="@drawable/ic_streetview_black_24dp"
        android:tint="@android:color/black" />

  </LinearLayout>

</FrameLayout>
