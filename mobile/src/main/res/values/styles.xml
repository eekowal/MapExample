<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorForeground">@android:color/darker_gray</item>
        <item name="android:textColorPrimary">@color/foreground_material_light</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColorAlertDialogListItem">@color/foreground_material_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_material_dark</item>
    </style>

    <style name="AlertDialogCustom2" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">?attr/colorPrimaryDark</item>
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>
</resources>
